@model IEnumerable<TradeApp.Models.Category>


<div class="card">
    <div class="list-group">
        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action @(ViewBag.categoryId == null?"active":"")" aria-current="true">
           Tüm Ürünler
        </a>
        @foreach (var item in Model)
        {
            <a asp-action="CategoryDetails" class="list-group-item list-group-item-action @(ViewBag.categoryId?.ToString()==item.Id.ToString()?"active":"")" asp-route-id="@item.Id">@item.Name</a>
        }
        
       
    </div>
</div>