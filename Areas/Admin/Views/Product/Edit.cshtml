@model TradeApp.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Ürün Düzenle</h1>
    
    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (@Html.DisplayFor(model => model.Image) == null)
            {
                <img src="~/images/image/resim-yok.png" style="width:300px; height:250px; object-fit:contain" />
            }
            else
            {
                <img src="@Html.DisplayFor(model => model.Image)" style="width:300px; height:250px; object-fit:contain;" />
            }
            
        </div>
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Başlık</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Açıklama</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Fiyat</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label">Resim</label>
                    <input asp-for="Image" class="form-control" type="hidden" />
                    <input asp-for="Image" class="form-control" type="file"/>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsHome" /> Anasayfaya Ekle
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsStock" /> Stokta Var
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Kategori</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-secondary  mr-5" asp-action="Index"><i class="bi bi-arrow-left"></i> Listeye Dön</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
