@model TradeApp.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Kategori Silme</h1>

    <h3>Seçmiş Olduğunuz Kategori Silinmek Üzere! Onaylıyor musunuz?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Silinecek Kategori :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a class="btn btn-secondary  mr-5" asp-action="Index"><i class="bi bi-arrow-left"></i> Listeye Dön</a>
            <input type="submit" value="Sil" class="btn btn-danger" />
        </form>
    </div>
</div>


