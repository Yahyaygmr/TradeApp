@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark btn-outline-light"><i class="bi bi-box-arrow-right"></i>  Çıkış Yap</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-light" style="margin-right:0.5rem;" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-people"></i>  Üye Ol</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-person-up"></i>  Giriş Yap</a>
    </li>
}
</ul>
